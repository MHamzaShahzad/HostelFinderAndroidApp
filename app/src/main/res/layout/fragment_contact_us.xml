<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_splash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="serif-monospace"
                android:text="Hostel Finder"
                android:textAlignment="center"
                android:textColor="#028394"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/splash_logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/txt_splash"
                android:layout_marginBottom="7dp"
                android:src="@drawable/logo_h" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/splash_logo"
                android:layout_margin="5dp"
                android:text="@string/about_us_"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/feedback_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_margin="5dp"
                android:text="How can we make Hotel Finder work for you?\nYour feedback is everything to us."
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedback_tag"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/inputFeedbackComplain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/style_edit_box"
                    android:gravity="start|top"
                    android:hint="Describe your feedback and Complain here!"
                    android:lines="3"
                    android:padding="10dp" />


                <Button
                    android:id="@+id/btnSubmitFeedBack"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_button_solid"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>