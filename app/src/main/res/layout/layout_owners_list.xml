<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user_avatar"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_toRightOf="@id/profileImage"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaylight"
                android:textSize="17sp"
                android:textColor="@color/colorText"
                android:text="Owner Name" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/ownerName"/>


            <TextView
                android:id="@+id/ownerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:fontFamily="@font/ralewaylight"
                android:textSize="17sp"
                android:lines="1"
                android:textColor="@color/colorText"
                android:layout_marginTop="5dp"
                android:text="Owner Email" />
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btnActiveInActiveOwner"
                android:layout_below="@id/ownerEmail"/>

            <TextView
                android:id="@+id/ownerPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:fontFamily="@font/ralewaylight"
                android:textSize="17sp"
                android:textColor="@color/colorText"
                android:layout_marginTop="5dp"
                android:text="Owner Phone" />

            <Button
                android:id="@+id/btnActiveInActiveOwner"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:fontFamily="@font/ralewaylight"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimaryDark" />


        </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

