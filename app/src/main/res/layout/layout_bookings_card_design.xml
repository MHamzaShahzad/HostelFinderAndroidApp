<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBookingRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageUserOrOwner"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/loading_gif_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/imageUserOrOwner"
                android:layout_toRightOf="@id/imageUserOrOwner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textHostelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:text="Hostel Name" />

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/raleway_bold"
                    android:text="User Name" />

                <TextView
                    android:id="@+id/textUserBelongsTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:fontFamily="@font/ralewaylight"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:text="Belongs To"
                    />

                <TextView
                    android:id="@+id/textRequestedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewaylight"
                    android:padding="5dp"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:text="Requested At" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>